{
  "name": "rampe",
  "version": "1.0.0",
  "description": "An AMP based static blogging engine.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "outside": "bin/rampe"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "fix": "tslint -p tsconfig.json --fix",
    "prepare": "npm run compile",
    "prepublishOnly": "npm test && npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "preversion": "npm run lint",
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "tsc -p .",
    "pretest": "npm run compile",
    "posttest": "npm run check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://sebabenz@bitbucket.org/sebabenz/rampe.git"
  },
  "keywords": [
    "AMP",
    "BLOG"
  ],
  "author": "Sebastian Benz",
  "license": "Apache-2.0",
  "homepage": "https://bitbucket.org/sebabenz/rampe#readme",
  "devDependencies": {
    "@sindresorhus/slugify": "^0.6.0",
    "@types/amphtml-validator": "^1.0.0",
    "@types/chokidar": "^1.7.5",
    "@types/glob": "^7.1.1",
    "@types/highlight.js": "^9.12.3",
    "@types/htmlparser2": "^3.7.31",
    "@types/js-yaml": "^3.11.2",
    "@types/marked": "^0.4.2",
    "@types/minimist": "^1.2.0",
    "@types/mkdirp": "^0.5.2",
    "@types/ncp": "^2.0.1",
    "@types/node": "^10.12.9",
    "amp-toolbox-optimizer": "^0.4.4",
    "amp-toolbox-runtime-version": "^0.2.2",
    "amphtml-validator": "^1.0.23",
    "chokidar": "^2.0.4",
    "feed": "^2.0.1",
    "glob": "^7.1.3",
    "gts": "^0.9.0",
    "highlight.js": "^9.13.1",
    "htmlparser2": "^3.10.0",
    "js-yaml": "^3.12.0",
    "marked": "^0.5.2",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "nunjucks": "^3.1.4",
    "prettier": "^1.15.2",
    "serve": "^10.1.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "typescript": "~3.1.0"
  }
}
